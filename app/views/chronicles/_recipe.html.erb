<%= form_for @chronicle do |f| %>
	<%=f.text_area :reference_url%><br>
	<%=f.text_field :title%><br>
	<%=f.cktext_area :body, :ckeditor => { :toolbar => 'mini'}, id:"test"%>
	<%=f.text_area :remote_image_url, id:"pleasesave" %><br>

	<!-- Categories -->
	Select Category <br>
  <%@categories.each do |c|%>
  	<%=check_box_tag 'categories[]', c.id -%>
		<%=c.category_name -%><br>
  <%end%>
  <%=check_box_tag 'add new'%>
  <%="add new" -%><br>
	<%=text_field_tag :new_cat, nil,:placeholder=>"test" %><br>
  <!-- End of Categories -->

	<%=f.hidden_field :user_id, value:current_user.id%>
	<%=f.hidden_field :manual, value:"from-remote"%>
	<%=f.submit %>
<% end %>
