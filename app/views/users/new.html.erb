<h1>Sign Up</h1>

<%= form_for @user do |f| %>
		<%=f.text_field :fname, placeholder: "First Name", required: true %><br>
		<%=f.text_field :lname, placeholder: "Last Name", required: true %><br>
		<%=f.email_field :email, placeholder: "Email", required: true %><br>
		<%=f.password_field :password, placeholder: "Password", required: true %><br>
		<%=f.password_field :password_confirmation, placeholder: "Re-enter Password", required: true %><br>
		<%= flash[:alert]%><br>
		<%=f.submit %>
	<% end %>