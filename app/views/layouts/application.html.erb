<!DOCTYPE html>
<html>
<head>
  <title>Springpad</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<nav>
		<ul>
		  <li><%=link_to "KimPad", root_path%></li>
		  <%if logged_in?%>
			  <li><%=link_to "Explore", districts_path%></li>
			  <li><%=link_to "MY Profile", user_path(current_user.id)%></li>
			  <li><%=link_to "My Stacks", stacks_path%></li>
				<li><%=link_to "My Chronicles", chronicles_path%></li>
				<li><%=link_to "Add Stack", new_stack_path%></li>
				<li><%=link_to "Add Chronicle", new_chronicle_path%></li>
			  <li><%=link_to "Log Out", logout_path, method: :delete%></li>
		  <%else%>
			  <li><%=link_to "Log In", login_path%></li>
			  <li><%=link_to "Sign Up", new_user_path%></li>
		  <%end%>
		</ul>
	</nav>
	<%=flash[:notice]%>

<%= yield %>

</body>
</html>
